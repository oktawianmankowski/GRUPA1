<?xml version="1.0" encoding="UTF-8"?>
<project name="module_widowapp" default="compile.module.widowapp">
  <dirname property="module.widowapp.basedir" file="${ant.file.module_widowapp}"/>
  
  <property name="module.jdk.home.widowapp" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.widowapp" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.widowapp" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.widowapp" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="widowapp.output.dir" value="${module.widowapp.basedir}/bin"/>
  <property name="widowapp.testoutput.dir" value="${module.widowapp.basedir}/bin"/>
  
  <path id="widowapp.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="widowapp.module.production.classpath">
    <path refid="${module.jdk.classpath.widowapp}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.0.0/junit-jupiter-api-5.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.0.0/junit-platform-commons-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.0.0/opentest4j-1.0.0.jar"/>
  </path>
  
  <path id="widowapp.runtime.production.module.classpath">
    <pathelement location="${widowapp.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.0.0/junit-jupiter-api-5.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.0.0/junit-platform-commons-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.0.0/opentest4j-1.0.0.jar"/>
  </path>
  
  <path id="widowapp.module.classpath">
    <pathelement location="${widowapp.output.dir}"/>
    <path refid="${module.jdk.classpath.widowapp}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.0.0/junit-jupiter-api-5.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.0.0/junit-platform-commons-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.0.0/opentest4j-1.0.0.jar"/>
  </path>
  
  <path id="widowapp.runtime.module.classpath">
    <pathelement location="${widowapp.output.dir}"/>
    <pathelement location="${path.variable.maven_repository}/org/apiguardian/apiguardian-api/1.0.0/apiguardian-api-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/jupiter/junit-jupiter-api/5.0.0/junit-jupiter-api-5.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/junit/platform/junit-platform-commons/1.0.0/junit-platform-commons-1.0.0.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/opentest4j/opentest4j/1.0.0/opentest4j-1.0.0.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.widowapp">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.widowapp">
    <patternset refid="excluded.from.module.widowapp"/>
  </patternset>
  
  <path id="widowapp.module.sourcepath">
    <dirset dir="${module.widowapp.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.widowapp" depends="compile.module.widowapp.production,compile.module.widowapp.tests" description="Compile module WidowApp"/>
  
  <target name="compile.module.widowapp.production" depends="register.custom.compilers" description="Compile module WidowApp; production classes">
    <mkdir dir="${widowapp.output.dir}"/>
    <javac2 destdir="${widowapp.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.widowapp}/javac">
      <compilerarg line="${compiler.args.widowapp}"/>
      <bootclasspath refid="widowapp.module.bootclasspath"/>
      <classpath refid="widowapp.module.production.classpath"/>
      <src refid="widowapp.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.widowapp"/>
    </javac2>
    
    <copy todir="${widowapp.output.dir}">
      <fileset dir="${module.widowapp.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.widowapp.tests" depends="register.custom.compilers,compile.module.widowapp.production" description="compile module WidowApp; test classes" unless="skip.tests"/>
  
  <target name="clean.module.widowapp" description="cleanup module">
    <delete dir="${widowapp.output.dir}"/>
    <delete dir="${widowapp.testoutput.dir}"/>
  </target>
</project>